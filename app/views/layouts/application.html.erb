<!DOCTYPE html>
<html>
  <head>

    <title><%= full_title(yield(:title))%></title>
    <link rel = "icon" href =
        "https://media.indiedb.com/images/games/1/51/50676/moon-transparent.png"
        type = "image/x-icon">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/nav' %>
    <%= render 'shared/flash' %>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
