<% if logged_in? && current_user.admin? %>
  <%= link_to 'Create new client', signup_path, class: "btn btn-outline-success" %>
  <%= link_to 'All Users', users_path, class: "btn btn-outline-success" %>
  <%= link_to 'Logout', logout_path, method: :delete, class: "btn btn-outline-success float-right" %>
<% elsif logged_in? %>
  <%= link_to 'My Profile', user_path(current_user), class: "btn btn-outline-success" %>
  <%= link_to 'Logout', logout_path, method: :delete, class: "btn btn-outline-success float-right" %>
<% end %>