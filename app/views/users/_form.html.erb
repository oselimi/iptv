<div id="all">
  <%= form_for @user do |u|%>
  <%= render 'shared/errors', obj: @user%>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputUsername4">Username</label>
        <%= u.text_field :username, class: "form-control"%>
      </div>
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <%= u.email_field :email, class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress2">Phone</label>
      <%= u.telephone_field :telephone, class: "form-control"%>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Address</label>
        <%= u.text_field :address, class: "form-control", placeholder: "Karpos, Partizanska"%>
      </div>
      <div class="form-group col-md-6">
        <label for="inputCity">City</label>
        <%= u.text_field :city, class: "form-control", placeholder: "Skopje, Kumanovo"%>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword">Password</label>
      <%= u.password_field :password, class: "form-control"%>
    </div>
    <div class="form-group">
      <label for="inputAddress2">Confirmation Password </label>
      <%= u.password_field :password_confirmation, class: "form-control"%>
    </div>
    <br/>
    <%= u.submit "Accept", class:"btn btn-primary btn-lg btn-block" %>
  <% end %>
</div>
